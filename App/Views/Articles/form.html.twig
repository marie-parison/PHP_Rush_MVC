<div id="page-wrapper">
    <div class="row">
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8 m-auto">
                            <h1 class="page-header">{{title}} article</h1>
                            <form enctype="multipart/form-data" role="form" method="post">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input required class="form-control" id="title" name="title" value="{{article.title}}">
                                </div>
                                <div class="form-group">
                                    <label for="content">Content</label>
                                    <textarea required class="form-control" rows="3" id="content" name="content">{{article.content}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="path_image">
                                        Image <br>
                                        {% if article.path_image %}
                                        <img class="border" id="img" src="{{ article.path_image }}" alt="Image de l'article" />
                                        {% else %}
                                        <img class="border" id="img" src="/assets/img/no_image_available.jpg" alt="Image de l'article" />
                                        {% endif %}
                                    </label>
                                    <input hidden type="file" id="path_image" name="path_image">
                                </div>
                                <div class="form-group">
                                    <label for="id_category">Category</label>
                                    <select id="id_category" class="form-control" name="id_category">
                                        {% for category in categories %}
                                        <option value={{category.id}}>{{category.name}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div id="tags">
                                    <div class="form-group">
                                        <label class="d-block">Tags</label>
                                        {% if article_tags %}
                                        {% for article_tag in article_tags %}
                                        <span class="badge badge-light">{{ article_tag.name }}</span>
                                        {% endfor %}
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="new_tag">
                                        <button type="button" class="btn btn-light">Add new tag</button>
                                    </div>
                                    <div class="form-group">
                                        <label class="d-block">Add existing tags</label>
                                        {% for tag in tags %}
                                        <span class="badge badge-light">{{ tag.name }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">{{title}}</button>
                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
